{
	"$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
	"formatter": {
		"enabled": true,
		"formatWithErrors": true, 
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 120
	  },
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignore": ["dist/", "build/", "node_modules/"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useConst": "warn",
				"noUnusedVariables": "error"
			  }
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
